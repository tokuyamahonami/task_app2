<div class="container-fiuld room-new">
   <div class="row">
      <div class="col-lg-2 room-nav room-nav-pc d-lg-block d-none">
        <ul>
          <li class="active"><%= link_to "基本情報",new_room_path %></li>
        </ul>
      </div>

      <div class="col-lg-2 room-nav room-nav-pc d-lg-block d-none">
        <ul>
          <li class="active"><%= link_to "基本情報",new_room_path %></li>
        </ul>
      </div>

      <div class="col-md-10 room-view">
         <div class="room-view-box">
            <%= form_with model: @room do |f| %>

            <%= f.hidden_field :user_id, :value => @user.id %>

            <div class="update-content">
               <div class="row">
                  <h5>ルーム情報登録</h5>
               </div>
            </div>

            <div class="update-content">
               <div class="row">
                  <%= f.label :room_name,"ルーム名",class:"col-md-3 required-a" %>
                  <%= f.text_field :room_name,placeholder:"ルーム名を入力", class:"form-control col-md-9 mb-4 field_wieth_error" %>
               </div>
            </div>

            <div class="update-content">
               <div class="row">
                  <%= f.label :introducution,"ルーム紹介",class:"col-md-3 required-a" %>
                  <%= f.text_field :introducution,placeholder:"ルーム紹介を入力", class:"form-control col-md-9 mb-4 field_wieth_error" %>
               </div>
            </div>

            <div class="update-content">
               <div class="row">
                  <%= f.label :total,"料金",class:"col-md-3 required-a" %>
                  <%= f.number_field :total,placeholder:"一日あたりの料金を入力", class:"form-control mb-4 col-md-9 field_wieth_error" %>
               </div>
            </div>

            <div class="update-content">
               <div class="row">
                  <%= f.label :address,"住所",class:"col-md-3 required-a" %>
                  <%= f.text_field :address,placeholder:"住所を入力", class:"form-control mb-4 col-md-9 field_wieth_error" %>
               </div>
            </div>

            <div class="update-content">
               <div class="row">
                  <%= f.label :photo,"ルーム画像",class:"col-md-3 required-a" %>
                  <%= f.file_field :photo, class:"mb-4 col-md-9 field_wieth_error" %>
               </div>
            </div>

            <div class="update-content">
               <div class="row">
                  <%= f.submit "登録" ,class:"col-md-2 btn btn-primary mx-3"%>
               </div>
            </div>

            <% end %>

         </div>
      </div>
   </div>
</div>

