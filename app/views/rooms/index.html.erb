<div class="container-fiuld room-posts">
   <h4 class="pb-4">登録済みルーム一覧</h4>
   <table>
       <thead>
          <tr algin="center">
              <th>ルーム画像</th>
              <th>ルーム名</th>
              <th>ルーム紹介</th>
              <th>料金</th>
              <th>作成日</th>
          </tr>
       </thead>
       <tbody>
           <% @rooms.each do |room| %>
              <tr>
                 <td><image src="<%= room.picture %>" onerror= "this.src='https://presite-potepancamp-rails-02.herokuapp.com/assets/room01.jpg';" class="room-posts-image"></td>
                 <td class="posts-name"><%= link_to room.name, {controller: 'reservations', action: 'show', id: room.id} %></td>
                 <td class="posts-content"><%= room.introduction %></td>
                 <td class="price-icon"><%= room.single_rate %></td>
                 <td><%= room.created_at.strftime('%Y/%m/%d %H:%M:%S')  %></td>
              </tr>
           <% end %>
       </tbody>
   </table>
</div>





 
