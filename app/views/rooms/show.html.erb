<div class="container room-show">
   <div class="row">
      <div class="col-md-8">
          <image src= "<%= @room.picture %>" onerror= "this.src='https://presite-potepancamp-rails-02.herokuapp.com/assets/room01.jpg';" class="room-show-image">

          <div class="room-show-detile mt-5">
             <div class="room-show-detile-icon">
                <%=link_to root_path do %>
                 <img src="https://presite-potepancamp-rails-02.herokuapp.com/assets/default_icon.jpg" class="host-icon">
                <% end %>
             </div>

             <div class="room-show-profile ml-4">
                <p class="room-show-profile-name">
                   <%= @room.name %>
                </p>
                <p class="room-show-profile-address">
                   <%= @room.address %>
                </p>
             </div>
          </div>

          <p class="room-show-detile-content">
             <%= @room.introduction %>
          </p>
      </div>

      <div class="col-md-4">
          <div class="room-show-nav">
              <%= form_with model: @reservation, url: reservations_confirm_path, local: true do |f| %>
              <h5 class="price-icon">¥<%= @room.single_rate %> / 日</h5>

                 <div class="room-show-date-select">
                    <div>                    
                     <%= f.label:start_date, "開始日" %>
                     <%= f.date_field:start_date, class:"form-control mb-4" %>
                    </div>
                    <div>
                     <%= f.label:end_date, "終了日" %>
                     <%= f.date_field:end_date, class:"form-control mb-4" %>
                    </div>
                    <div>
                     <%= f.label:people, "人数" %>
                     <%= f.number_field:people, class:"form-control mb-4" %>
                    </div>
                     <%= f.hidden_field :room_id, :value => @room.id %>
                     <%= f.hidden_field :user_id, :value => @user.id %>
                     <%= f.submit "予約する", class:"form-control mb-4" %>
                 </div>
              <% end %>
          </div>
      </div>
   </div>
</div>

