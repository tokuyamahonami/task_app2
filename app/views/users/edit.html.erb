    <div class="col-md-10 user-view">
      <div class="user-view-box">
        <div class="update-content">
          <div class="row">
            <h5>アカウント</h5>
          </div>
        </div>

        <%= form_with model: @user, url: users_profile_path, id: 'new_user', class: 'new_user', local: true do |f| %>
        
        <div class="field">
        <div class="form-group">
          <%= f.label :ユーザー名 %><br />
          <%= f.text_field :name, class:"form-control", placeholder: "ユーザー名を入力" %>
        </div>
      </div>

      <div class="field">
        <div class="form-group">
          <label class="col-md-3" for="name">アイコン画像</label>
             <% if @user.image.attached? %>
              <%= image_tag @user.image,class:"icon-image host-icon"%> 
             <% else %>
              <img src="https://rails-02-sample.herokuapp.com/assets/common/default-avatar-7a6cbfd7993e89f24bfc888f4a035a83c6f1428b8bdc47eed9095f2799a40153.png"  alt='アイコン画像' class="icon-image host-icon">
             <% end %> 
          <%= f.file_field :image, class:"btn btn-primary", placeholder: "アイコン画像をアップロード" %>
        </div>
      </div>

      <div class="field">
        <div class="form-group">
          <%= f.label :introduction, "自己紹介" %><br />
          <%= f.text_area :introduction, class:"form-control", placeholder: "自己紹介文入力してください" %>
        </div>
      </div>
      <div class="update-content">
        <div class="row">
            <%= f.submit "更新" ,class:"col-md-2 btn btn-primary mx-3"%>
        </div>
      </div>
      <% end %>
     </div>
    </div>
  </div>
</div>
